{
	"name": "@spread-solvers/evm-toolchain",
	"version": "0.0.5",
	"description": "EVM utilities for blockchain interactions",
	"author": "Spread Solvers Collective",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/SpreadSolvers/evm-toolchain"
	},
	"files": [
		"dist/**/*",
		"README.md",
		"LICENSE"
	],
	"exports": {
		"./caip-id": {
			"types": "./dist/caip-id/index.d.ts",
			"import": "./dist/caip-id/index.js",
			"require": "./dist/caip-id/index.js"
		},
		"./utils": {
			"types": "./dist/evm-utils/index.d.ts",
			"import": "./dist/evm-utils/index.js",
			"require": "./dist/evm-utils/index.js"
		},
		"./primitives": {
			"types": "./dist/evm-primitives/index.d.ts",
			"import": "./dist/evm-primitives/index.js",
			"require": "./dist/evm-primitives/index.js"
		},
		"./client": {
			"types": "./dist/evm-chain-client/index.d.ts",
			"import": "./dist/evm-chain-client/index.js",
			"require": "./dist/evm-chain-client/index.js"
		}
	},
	"license": "MIT",
	"type": "module",
	"scripts": {
		"ci": "yarn install --frozen-lockfile && yarn run check-types && yarn run lint",
		"prepare": "husky",
		"check-types": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "yarn lint --fix",
		"test": "echo 'No test framework implemented'",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"build": "tsc",
		"prepublishOnly": "npm run build"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"trailingComma": "all",
		"printWidth": 120,
		"semi": false
	},
	"lint-staged": {
		"*.{js,ts}": "yarn lint:fix",
		"*.{js,ts,json,md,yml,yaml,toml,yaml}": "yarn format"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"viem": "^2.37.11",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.37.0",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^24.6.2",
		"commitlint": "^20.1.0",
		"eslint": "^9.37.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^15.5.2",
		"prettier": "3.5.3",
		"prettier-plugin-organize-imports": "4.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.45.0"
	}
}
